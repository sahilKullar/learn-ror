<header>
  <h1>Pets#index</h1>
  <p>Find me in app/views/pets/index.html.erb</p>
  <br/>
</header>
<main>
  <div class="ui raised very padded text container segment">
    <table class="ui celled table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @pets.each do |pet| %>
        <tr>
          <td data-label="Name"><%= pet.name %></td>
          <td data-label="Age"><%= pet.age %></td>
          <td data-label="Description"><%= pet.description %></td>
          <td data-label="Action">
            <%= link_to('View', pet_path(pet)) %>
            <%= link_to('New', new_pet_path) %>
            <%= link_to('Edit', edit_pet_path(pet)) %>
            <%= link_to('Remove', pet_path(pet), method: :delete) %>
            <%#= link_to('Remove', pet_path(pet), method: :delete, data: { confirm: 'Are you sure?' }) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</main>